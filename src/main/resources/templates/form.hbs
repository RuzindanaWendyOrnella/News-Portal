{{#partial "content"}}

    <h1 style="color:white;font-style:oblique;text-align:center;font-family:sans-serif">Employee list!</h1>
    <div style="text-align:center;opacity:0.7">
            {{#if danger}}
                {{#each danger}}
                <div class="modal-dialog cascading-modal" role="document">
                <div class="modal-content">
                    <h1 style="color:black">Current post:</h1>
                    <h1 style="color:black;font-style:oblique;font-family:sans-serif">Name</h1>
                    <p>{{ name }}</p>
                    <h1 style="color:black;font-style:oblique;font-family:sans-serif">Position</h1>
                    <p>{{ positionincompany }}</p>
                    <h1 style="color:black;font-style:oblique;font-family:sans-serif">Role </h1>
                    <p>{{ role }}</p>
                    <h1 style=color:black;font-style:oblique;font-family:sans-serif">Department Name </h1>
                    <p>{{ departmentid }}</p>
                </div>
                </div>
                {{/each}}
            {{else}}
                <p>No employee!</p>

            {{/if}}

        </div>
        <style>
    body{
    background-image:url("https://images.pexels.com/photos/372748/pexels-photo-372748.jpeg?auto=compress&cs=tinysrgb&dpr=2&h=650&w=940");
    background-size:cover;
    background-repeat:no-repeat;
    }
    .one{
    text-align:center;
     color:white;
     text-decoration:underline

    }
</style>
    </div>
{{/partial}}

{{> layout.hbs}}