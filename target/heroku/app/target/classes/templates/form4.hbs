    {{#if tic}}

        {{#each tic}}
            <div class="modal-dialog cascading-modal" role="document">
                <div style="opacity:0.7" class="modal-content">


                    <h1 style="font-style:oblique">Tittle</h1>
                    <p class="two" style="color:black"> {{ about }}</p>
                    <h1 style="font-style:oblique">Author</h1>
                     <p style="color:black"> {{ author }}</p>
                    <h1 style="font-style:oblique">News</h1>
                 <p style="color:black"> {{ content }}</p>



                </div>
            </div>
        {{/each}}
